  <property name="project.jdk.home" value="${jdk.home.9.0}"/>
  <property name="project.jdk.bin" value="${jdk.bin.9.0}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.9.0"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module CloudAtlas -->
  
  <dirname property="module.cloudatlas.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.cloudatlas" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.cloudatlas" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.cloudatlas" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.cloudatlas" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
  
  <property name="cloudatlas.output.dir" value="${module.cloudatlas.basedir}/out/production/CloudAtlas"/>
  <property name="cloudatlas.testoutput.dir" value="${module.cloudatlas.basedir}/out/test/CloudAtlas"/>
  
  <path id="cloudatlas.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="cloudatlas.module.production.classpath">
    <path refid="${module.jdk.classpath.cloudatlas}"/>
  </path>
  
  <path id="cloudatlas.runtime.production.module.classpath">
    <pathelement location="${cloudatlas.output.dir}"/>
  </path>
  
  <path id="cloudatlas.module.classpath">
    <path refid="${module.jdk.classpath.cloudatlas}"/>
    <pathelement location="${cloudatlas.output.dir}"/>
  </path>
  
  <path id="cloudatlas.runtime.module.classpath">
    <pathelement location="${cloudatlas.testoutput.dir}"/>
    <pathelement location="${cloudatlas.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.cloudatlas">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.cloudatlas">
    <patternset refid="excluded.from.module.cloudatlas"/>
  </patternset>
  
  <path id="cloudatlas.module.sourcepath">
    <dirset dir="${module.cloudatlas.basedir}">
      <include name="zmi"/>
    </dirset>
  </path>
  dupa
  
  <target name="compile.module.cloudatlas" depends="compile.module.cloudatlas.production,compile.module.cloudatlas.tests" description="Compile module CloudAtlas"/>
  
  <target name="compile.module.cloudatlas.production" depends="register.custom.compilers" description="Compile module CloudAtlas; production classes">
    <mkdir dir="${cloudatlas.output.dir}"/>
    <javac2 destdir="${cloudatlas.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.cloudatlas}/javac">
      <compilerarg line="${compiler.args.cloudatlas}"/>
      <bootclasspath refid="cloudatlas.module.bootclasspath"/>
      <classpath refid="cloudatlas.module.production.classpath"/>
      <src refid="cloudatlas.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.cloudatlas"/>
      <classpath>
        <pathelement path="${classpath}"/>
        <fileset dir="interpreter/lib">
          <include name="**/*.jar"/>
        </fileset>
      </classpath>
    </javac2>
    
    <copy todir="${cloudatlas.output.dir}">
      <fileset dir="${module.cloudatlas.basedir}/zmi">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.cloudatlas.tests" depends="register.custom.compilers,compile.module.cloudatlas.production" description="compile module CloudAtlas; test classes" unless="skip.tests"/>
  
  <target name="clean.module.cloudatlas" description="cleanup module">
    <delete dir="${cloudatlas.output.dir}"/>
    <delete dir="${cloudatlas.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.cloudatlas" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.cloudatlas" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>